
<%= form_for(resource, url: update_preferences_admin_spree_retailer_path, method: :post) do |f| %>
    <table style="width: 30%">
      <%= f.fields_for :settings do |p| %>
          <tbody>
          <% resource.settings.each do |key, value| %>
              <tr>
                <td><%= p.label key %></td>
                <td><%= p.check_box key, checked: value %>
                  <% if key == 'shopify_title_updates' || key == 'shopify_properties_updates' %>
                      <span style="color:red">Currently not in use</span>
                  <% end %>
                </td>
              </tr>
          <% end %>
          <tr>
            <td><%= f.submit "Update Settings" %></td>
          </tr>
          </tbody>
      <% end %>
    </table>
<% end %>
