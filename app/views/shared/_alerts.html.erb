<% if flash[:notice] %>
    <div class="row">
        <div class="alert alert-success alert-dismissible dark col-sm-12 1">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:notice].html_safe %>
        </div>
    </div>
    <% flash.clear %>
<% end %>
<% if flash[:alert] %>
    <div class="row">
        <div class="alert alert-danger alert-dismissible dark col-sm-12 3">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= flash[:alert].html_safe %>
      </div>
    </div>
    <% flash.clear %>
<% end %>

<%= render 'retailer/shared/unverified_email_warning' %>

<% if ENV['DISABLE_ORDER_REMITTANCE'] == 'yes' %>
    <div class="alert alert-danger alert-dismissible dark col-sm-12 3">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      Order remittance has been temporarily disabled due to platform maintenance.
    </div>
<% end %>
