<% content_for :title, "Profile" %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <div class="page-main">
    <div class="page-header">
        <h2 class="page-title">Edit Profile</h2>
    </div>
    <%= render :partial=>"shared/alerts" %>
    <div class="page-content">
      <div class="row">
        <div class="col-md-12">
          <div class="panel">
            <div class="panel-heading"><h3 class="panel-title">Basic Info</h3></div>
            <div class="panel-body">
              <div class="row product-details margin-bottom with-margin-top">
                <div class="col-md-12">
                  <%= form_tag( :url => {:controller => "profiles", :action => "update_email"}) do |f| %>
                    <div class="form-group">
                      <%= label_tag :email, "Email" %>
                      <%= text_field_tag :email, "", class: "form-control", placeholder: "Email Address" %>
                    </div>
                    <div class="form-group">
                      <%= label_tag :name, "Name" %>
                      <%= text_field_tag :name, "", class: "form-control" %>
                    </div>
                    <%= submit_tag :Update, class: "btn btn-primary" %>
                  <% end %>
                </div>
              </div>
              <hr>
              <div class="clearfix"></div>
              <div class="panel-heading"><h4>Update Password</h4></div>
              <div class="row product-details margin-bottom with-margin-top">
                <div class="col-md-12">
                  <%= form_tag( :url => {:controller => "profiles", :action => "update_email"}) do |f| %>
                    <div class="form-group">
                      <%= label_tag :password, "New Password" %>
                      <%= password_field_tag :email, "", class: "form-control", placeholder: "Enter Password Here" %>
                    </div>
                    <div class="form-group">
                      <%= label_tag :confirm_password, "Confirm Password" %>
                      <%= text_field_tag :confirm_password, "", class: "form-control" %>
                    </div>
                    <%= submit_tag :Update, class: "btn btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>
