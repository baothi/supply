<% content_for :title, "Settlements" %>
<% content_for :main_menu, Hingeto::Section::REPORTING %>
<% content_for :inner_menu, Hingeto::Section::SETTLEMENT %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "shared/side_menu" %>
<%= render "shared/grid_menu" %>

<div class="page">
  <%= render "reporting/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Settlements</h1>
    </div>

    <%= render :partial=>"shared/alerts" %>


    <div class="page-content">

      <%= render "shared/periods/daily_period" %>

      <div class="panel">
        <div class="panel-body">
          <h4>Overview</h4>
          <p>It may take a few days for settlements for recent transactions to show up.</p>
        </div>
      </div>

      <div class="panel">
        <div class="panel-body">
          <h4>Summary</h4>
          <%= render partial:"/reporting/settlements/summary" %>
        </div>
      </div>

      <div class="panel">
        <div class="panel-body">
          <h4>Sales Detail</h4>
          <%= render partial:"/reporting/settlements/sales_details" %>
        </div>
      </div>

      <div class="panel">
        <div class="panel-body">
          <h4>Returns Detail</h4>
          <%= render partial:"/reporting/settlements/returns_details" %>
        </div>
      </div>

      <div class="panel">
        <div class="panel-body">
          <h4>Penalty Detail</h4>
          <%= render partial:"/reporting/settlements/penalty_details" %>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="shopifyInstructions" aria-hidden="true" aria-labelledby="shopifyInstructions"
     role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title">Shopify Instructions</h4>
      </div>

      <div class="modal-body">
        <p>
          Video instructions to go here.
        </p>
      </div>
      <div class="modal-footer">


      </div>
    </div>
  </div>
</div>
<!-- End Modal -->



<%= render "shared/platform/footer" %>
</body>