        <h4 class="modal-title">Shopify Instructions</h4>
      </div>

      <div class="modal-body">
        <p>
          Video instructions to go here.
        </p>
      </div>
      <div class="modal-footer">


      </div>
    </div>
  </div>
</div>
<!-- End Modal -->


<% content_for :custom_footer_javascript do %>

    <script>
      (function() {
        var barChartData = {
          labels: ["Supplier 1", "Supplier 2", "Supplier 3", "Supplier 4", "Supplier 5",
            "Supplier 6", "Supplier 7", "Supplier 8", "Supplier 9", "Supplier 10"],
          datasets: [{
            label: "Sales ($)",
            backgroundColor: "rgba(204, 213, 219, .2)",
            borderColor: Config.colors("blue-grey", 300),
            hoverBackgroundColor: "rgba(204, 213, 219, .3)",
            borderWidth: 2,
            data: [65, 45, 5, 50, 60, 45, 55,4,5,55]
          }]
        };

        var myBar = new Chart(document.getElementById("salesByDayPeriod").getContext("2d"), {
          type: 'bar',
          data: barChartData,
          options: {
            responsive: true,
            scales: {
              xAxes: [{
                display: true
              }],
              yAxes: [{
                display: true
              }]
            }
          }
        });
      })();

      // Pie Chart
