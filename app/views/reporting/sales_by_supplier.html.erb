<% content_for :title, "Report - Sales by Supplier" %>
<% content_for :main_menu, Hingeto::Section::REPORTING %>
<% content_for :inner_menu, Hingeto::Section::SALES_BY_SUPPLIER %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "shared/side_menu" %>
<%= render "shared/grid_menu" %>

<div class="page">
  <%= render "reporting/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Sales by Supplier</h1>
    </div>

    <%= render :partial=>"shared/alerts" %>


    <div class="page-content">
      <%= render "shared/time_period" %>
      <div class="panel">
        <div class="panel-body">

          <h4>Chart</h4>
          <canvas id="salesByDayPeriod" height="100" width="450"></canvas>

          <h4>Table</h4>
          <%= render partial: "reporting/sales/supplier_sales" %>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
