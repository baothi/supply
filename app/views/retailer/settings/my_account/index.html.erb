<% content_for :title, "Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::MY_ACCOUNT %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%#= render "shared/grid_menu" %>


<div class="page">
  <%#= render "retailer/settings/shared/menu" %>
  <div class="page-main">
    <%#= render "shared/temporary_password_warning" %>

    <div class="page-header">
      <h1 class="page-title">My Account</h1>
    </div>


    <div class="page-content">
      <div class="row">
      <%= render :partial=>"shared/alerts" %>
      </div>

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Current Account Information</h3>
        </div>

        <div class="panel-body">
          <div class="row">

            <div class="form-group col-sm-12">
              <label class="control-label" for="inputBasicFirstName">Business Name</label>
              <%= email_field_tag nil, current_retailer.name, class: "form-control", :readonly => true %>
            </div>

            <div class="form-group col-sm-12">
              <label class="control-label" for="inputBasicFirstName">Email Address</label>
              <%= email_field_tag nil, current_spree_user.email, class: "form-control", :readonly => true %>
            </div>

            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">First Name </label>
              <%= text_field_tag nil, current_spree_user.first_name, class: "form-control", readonly: true %>
            </div>
            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">Last Name </label>
              <%= text_field_tag nil, current_spree_user.last_name, class: "form-control", readonly: true %>
            </div>
          </div>
        </div>
      </div>

      <%= render 'retailer/settings/my_account/block/update_account' %>

    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>
