<% content_for :title, "Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::USERS %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <%#= render "retailer/settings/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Settings</h1>
    </div>
    <%= render :partial=>"shared/alerts" %>

    <div class="page-content">

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Account Information</h3>
        </div>
        <div class="panel-body">
          <% @brand = OpenStruct.new %>
          <%= form_for("brand", :url => {:controller => "settings", :action => "index"}) do |f| %>

              <div class="row">

                <div class="form-group col-sm-12">
                  <label class="control-label" for="inputBasicFirstName">Email Address</label>
                  <%#= f.text_field :name, class:"form-control", autocomplete: "off", :placeholder => "Store Name", :readonly => true %>
                  <p>leandrew@hingeto.com <a href="#">Change Email</a></p>
                  <p><a href="#">Change Password</a></p>
                </div>

                <div class="form-group col-sm-6">
                  <label class="control-label" for="inputBasicFirstName">First Name </label>
                  <%= f.text_field :slug, class:"form-control", autocomplete: "off", :placeholder => "Enter First Name" %>
                </div>
                <div class="form-group col-sm-6">
                  <label class="control-label" for="inputBasicFirstName">Last Name </label>
                  <%= f.text_field :slug, class:"form-control", autocomplete: "off", :placeholder => "Enter Last Name" %>
                </div>


                <div class="form-group col-sm-12">
                  <label class="control-label" for="inputBasicFirstName">Account Role</label>
                  <select class="form-control">
                    <option value="owner">Owner</option>
                    <option value="admin">Admin</option>
                    <option value="fulfillment">Fulfillment</option>
                    <option value="account">Account</option>
                    <option value="customer_service">Customer Service</option>
                  </select>
                </div>

              </div>


              <div class="form-group">
                <button type="submit" class="btn btn-primary">Update User Settings</button>
              </div>
          <% end %>

        </div>
      </div>

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Notification</h3>
        </div>
        <div class="panel-body">
          <% @brand = OpenStruct.new %>
          <%= form_for("brand", :url => {:controller => "settings", :action => "index"}) do |f| %>

              <div class="row">

                <div class="form-group col-sm-12">
                  <h5>Order Notifications</h5>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Order Confirmation</label>
                  </div>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Order Cancelled</label>
                  </div>
                </div>

                <div class="form-group col-sm-12">
                  <h5>Shipping Notifications</h5>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Shipping Due</label>
                  </div>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Order Cancelled</label>
                  </div>
                </div>

                <div class="form-group col-sm-12">
                  <h5>Product Notifications</h5>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Product Approval</label>
                  </div>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Product Errors</label>
                  </div>
                </div>

                <div class="form-group col-sm-12">
                  <h5>Payment Notifications</h5>
                  <div class="checkbox-custom checkbox-default">
                    <input type="checkbox" id="inputAgree" name="inputAgree" checked="" autocomplete="off">
                    <label for="inputCheckboxAgree">Payment Settlements</label>
                  </div>
                </div>

              </div>


              <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Notifications</button>
              </div>
          <% end %>

        </div>
      </div>


    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>