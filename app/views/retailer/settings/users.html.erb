<% content_for :title, "Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::USERS %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <%#= render "retailer/settings/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Settings</h1>
    </div>
    <%= render :partial=>"shared/alerts" %>

    <div class="page-content">
      <div class="panel">
        <div class="panel-heading">
          <!--<h3 class="panel-title">General</h3>-->
        </div>
        <div class="panel-body">
        <!-- Content -->
        <% roles = ['danger', 'info', 'warning'] %>
        <% users = [] %>
        <% users << ['Leandrew', 'Robinson', 'Owner', 'December 19th 2016'] %>
        <% users << ['Ismail', 'Maiyegun', 'Owner', 'December 19th 2016'] %>
        <% users << ['Yaw', 'Owusu-Barimah', 'Owner', 'December 19th 2016'] %>
        <% users << ['Meera', 'Attride', 'Accounting', 'December 19th 2016'] %>
        <% users << ['Adam', 'Shupe', 'Marketing', 'December 19th 2016'] %>
        <% users << ['Mike', 'D\'Amico', 'Customer Service', 'December 19th 2016'] %>
         <div class="row">
           <div class="col-lg-12 col-xs-12">
             <!-- Example Basic -->
             <div class="example-wrap">
               <div class="example table-responsive">
                 <table class="table">
                   <thead>
                   <tr>
                     <th></th>
                     <th>Full Name</th>
                     <th>Role</th>
                     <th>Last Login Date</th>
                   </tr>
                   </thead>
                   <tbody>
                   <% users.each_with_index do |user, i| %>
                   <tr>
                     <td>
                       <div class="media-left">
                         <a class="avatar avatar-online" href="javascript:void(0)">
                           <%= image_tag "placeholders/hingeto_staff/leandrew.jpg", alt:"Name" %>
                         </a>
                       </div>
                     </td>
                     <td>
                       <a href="/settings/user_settings"><%= user[0] %> <%= user[1] %></a>
                     </td>
                     <td>
                       <span class="tag tag-<%= roles[i%3] %>"><%= user[2] %></span>
                     </td>
                     <td><%= user[3] %></td>
                   </tr>
                   <% end %>
                   </tbody>
                 </table>
               </div>
             </div>
             <!-- End Example Basic -->
           </div>
         </div>

        </div>
      </div>

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Add Account</h3>
        </div>
        <div class="panel-body">
          <% @brand = OpenStruct.new %>
          <%= form_for("brand", :url => {:controller => "settings", :action => "index"}) do |f| %>

              <div class="row">

                <div class="form-group col-sm-6">
                  <label class="control-label" for="inputBasicFirstName">First Name </label>
                  <%= f.text_field :slug, class:"form-control", autocomplete: "off", :placeholder => "Enter First Name" %>
                </div>
                <div class="form-group col-sm-6">
                  <label class="control-label" for="inputBasicFirstName">Last Name </label>
                  <%= f.text_field :slug, class:"form-control", autocomplete: "off", :placeholder => "Enter Last Name" %>
                </div>
                <div class="form-group col-sm-12">
                  <label class="control-label" for="inputBasicFirstName">Email Address</label>
                  <%#= f.text_field :name, class:"form-control", autocomplete: "off", :placeholder => "Store Name", :readonly => true %>
                  <%= f.text_field :name, class:"form-control", autocomplete: "off", :placeholder => "Please enter email" %>
                </div>

                <div class="form-group col-sm-12">
                  <label class="control-label" for="inputBasicFirstName">Account Role</label>
                  <select class="form-control">
                    <option value="owner">Owner</option>
                    <option value="admin">Admin</option>
                    <option value="fulfillment">Fulfillment</option>
                    <option value="account">Account</option>
                    <option value="customer_service">Customer Service</option>
                  </select>
                </div>

              </div>


              <div class="form-group">
                <button type="submit" class="btn btn-primary">Add</button>
              </div>
          <% end %>

        </div>
      </div>


    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>