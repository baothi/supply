<% content_for :title, "Shopify Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::SHOPIFY_SETTINGS %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <%#= render "retailer/settings/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Shopify Settings</h1>
    </div>
    <%= render :partial=>"shared/alerts" %>

    <div class="page-content" style="margin-top: 4em;">
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">General</h3>
        </div>
        <div class="panel-body">
          <% @brand = OpenStruct.new %>
          <%= form_for("brand", :url => {:controller => "settings", :action => "shopify_login"}, method: :get ) do |f| %>
            <div class="row with-large-top-bottom-margin">
              <div class="form-group col-sm-8">
                <label class="control-label" for="inputBasicFirstName">Store Name</label>
                <%#= f.text_field :name, class:"form-control", autocomplete: "off", :placeholder => "Store Name", :readonly => true %>
                <%= f.text_field :store_name, class:"form-control", autocomplete: "off", :placeholder => "Store Name" %>
              </div>
              <div class="form-group col-sm-4" style="margin-top: 2.1em;">
                <%= submit_tag "Install App", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
          <%= form_for("brand", :url => {:controller => "settings", :action => "shopify_login"}, method: :get ) do |f| %>
            <div class="row with-margin-top">
              <div class="form-group col-md-2">
                Auto Updates:
              </div>
              <div class="form-group col-md-4">
                <%= link_to retailer_auto_update_settings_path do %><button type="button" class="btn btn-block btn-primary">Auto Update Settings</button><% end %>
              </div>
            </div>
            <div class="checkbox-custom checkbox-primary">
              <input type="checkbox" id="inputUnchecked" checked="">
              <label for="inputUnchecked">Auto set shipping prices</label>
            </div>
            <div class="checkbox-custom checkbox-primary">
              <input type="checkbox" id="inputChecked" checked="">
              <label for="inputChecked">Order approval required</label>
            </div>
            <div class="checkbox-custom checkbox-primary">
              <input type="checkbox" id="inputUnchecked">
              <label for="inputUnchecked">Auto update product pricing(if available)</label>
            </div>
            <div class="clearfix with-margin-top mrgin-bottom"></div>

            <div class="panel-heading with-margin-top">
              <h4>Shipping Settings</h3>
            </div>

            <div class="row with-large-top-bottom-margin">
              <div class="col-md-2">
                <span>Shipping Rule</span>
              </div>
              <div class="col-md-8">
                <select class="form-control" data-plugin="select2">
                  <option value="AK">Free Shipping - Shipping costs added to product costs</option>
                </select>
              </div>
            </div>
            <div class="clearfix with-margin-top mrgin-bottom"></div>
            <div class="row with-margin-top">
              <div class="col-md-2">
                <span>Install X Shipping</span>
              </div>
              <div class="col-md-4">
                <button type="button" class="btn btn-block btn-primary">Install X Shipping App</button>
              </div>
            </div>
            <div class="clearfix with-margin-top mrgin-bottom"></div>
            <div class="row with-margin-top">
              <div class="col-md-4">
                <h4>Inventory Buffer</h4>
                <label class="control-label" for="inputBasicFirstName">Minimum inventory quantity (per size)</label>
                <%= f.text_field :name, class:"form-control", autocomplete: "off", :placeholder => "3 (default)" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>


    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>
