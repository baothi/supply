<div class="panel">
  <div class="panel-heading">
    <h4 class="panel-title ">
      Order Diagnosis / Internal Details
    </h4>
  </div>

  <div class="panel-body">

    <div class="form-group">
      <h5>Internal Identifier</h5>
      <div class="input-group">
        <%= text_field_tag 'internal_identifier',
                           @order.internal_identifier,
                           class: "form-control", disabled: true %>
      </div>
    </div>

    <% if @order.shopify_order? %>

      <div class="form-group">
        <h5>Shopify Processing Status</h5>
        <div class="input-group">
          <%= text_field_tag 'shopify_processing_status',
                            @order.shopify_processing_status,
                            class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <h5>Supplier Shopify Identifier</h5>
        <div class="input-group">
          <%= text_field_tag 'supplier_shopify_identifier',
                            @order.supplier_shopify_identifier,
                            class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <h5>Shopify Log</h5>
        <div class="input-group">
          <%= text_area_tag 'shopify_logs', @order.shopify_logs,
                            class: 'form-control',
                            readonly: true %>
        </div>
      </div>
    <% end %>

  </div>

</div>
