<% content_for :title, "Orders" %>
<% content_for :main_menu, Hingeto::Section::MANUAL_ORDER_IMPORT %>
<% content_for :inner_menu, Hingeto::Section::MANUAL_ORDER_IMPORT %>
<%= javascript_include_tag 'channels/job_notifications.js' %>
<%= javascript_include_tag 'cable.js' %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%= render "shared/grid_menu" %>

<div class="page">
  <%#= render "retailer/orders/shared/menu" %>
  <div class="page-main">
    <div class="page-header">  
    </div>
    <div class="page-content">
      <div class="panel nav-tabs-horizontal" data-plugin="tabs">
        <div class="panel-heading">
          <h3 class="panel-title">Manual Order Import</h3>
        </div>
        <div class="panel-body">
          <%= render :partial=>"shared/alerts" %>
          <p>To manually import a specific order that doesn't already show in MXED, please enter the Shopify Order Number below (with the #. For example for #1052, enter #1052) </p>
          <div class="row">
            <div class="col-md-12">
              <%= form_tag(retailer_orders_find_shopify_order_path, method: :get, id: 'find-order-form', remote: true) do %>
              <div class="form-group col-sm-6">
                <%= text_field_tag :shopify_order_number, params[:shopify_order_number], class: "form-control", placeholder: "Enter Shopify order name with the # if applicable" %>
              </div>
              <div class="form-group col-sm-2">
                <%= button_tag(type: "submit", class: "btn btn-default btn-outline", id: 'find-order', :name => nil) do %>
                   <i class="icon wb-search" aria-hidden="true"></i> Find Order
                <% end %>
              </div>
              <% end %>
            </div>
          </div>     
        </div>
      </div>

    </div>
    <div id='manual-order-import-div'>

    </div>
  </div>
</div>

<div id="manual_variant-finder-div">
  <%= render partial: 'retailer/orders/shared/modal/manual_variant_finder' %>
</div>

</body>
