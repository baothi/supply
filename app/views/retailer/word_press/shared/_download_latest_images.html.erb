<div>
  <%= link_to retailer_download_images_path(@product.internal_identifier) do %>
    <button type="button" class="btn btn-info listings_action-btn" style="width:100%" id="update-variant-btn">Download Latest Images</button>
  <% end %>
  <small align="center" style="margin: 0 auto;">Replace current images with images from supplier shopify store.</small>
</div>
<div class="modal fade" id="syncronizeImages" aria-labelledby="syncronizeImages" role="dialog" tabindex="-1" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-simple modal-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title">Confirm Synchronize Images</h4>
      </div>
      <div class="modal-body">
        <p>This will replace the current images at Shopify with the latest images found here. Are you sure you want to proceed?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default mr-2" data-dismiss="modal">Cancel</button>
        <%= link_to retailer_sync_images_path(@product.internal_identifier) do %>
          <button type="button" class="btn btn-primary">Synchronize</button>
        <% end %>
      </div>
    </div>
  </div>
</div> 