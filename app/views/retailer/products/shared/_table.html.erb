          <td><span class="checkbox-custom checkbox-primary"><input class="selectable-item" type="checkbox"> <label></label></span></td>
          <% sku = Faker::Bank.swift_bic %>
          <td><a href="/products/<%= sku.downcase %>"><%= sku %></a></td>
          <td> <%= image_tag 'placeholder.png',  class:'media-object', alt:'...' %></td>
          <td>Product Name</td>
          <td><span><%= number_to_currency Faker::Number.between(from: 1, to: 2000) %></span></td>
          <td>Shopify</td>
          <td><%= Faker::Number.between(from: 1, to: 200) %></td>
          <td><%= product_status(new_status) %></td>
        </tr>
    <% end %>

