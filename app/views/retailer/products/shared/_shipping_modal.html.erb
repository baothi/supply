<div class="modal fade in" id="shippingRates" aria-hidden="true" aria-labelledby="examplePositionCenter" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title"><strong>Shipping Rates</strong></h4>
      </div>
      <div class="modal-body">
        <% if @supplier.can_ship_to_usa? %>
        <p><strong>USA</strong></p>
            <% if @calculator && @calculator.preferences[:first_item_us] && @calculator.preferences[:first_item_us].positive? %>
        <%= number_to_currency @calculator.preferences[:first_item_us] %> for first item purchased.<br/>
        + <%= number_to_currency @calculator.preferences[:additional_item_us] %> for each additional item purchased
            <% else %>
                <p>Please contact us for shipping rates to the USA</p>
                <%= render "retailer/products/shared/shipping_warning" %>
            <% end %>
        <% end %>

        <hr>
        <% if @supplier.can_ship_to_canada? %>
            <p><strong>Canada</strong></p>
          <% if @calculator && @calculator.preferences[:first_item_canada] && @calculator.preferences[:first_item_canada].positive? %>

              <%= number_to_currency @calculator.preferences[:first_item_canada] %> for first item purchased.<br/>
              + <%= number_to_currency @calculator.preferences[:additional_item_canada] %> for each additional item purchased

          <% else %>
              <p>Please contact us for shipping rates to Canada</p>
                <%= render "retailer/products/shared/shipping_warning" %>
          <% end %>
            <hr>
        <% end %>
        <% if @supplier.can_ship_to_rest_of_world? %>
            <p><strong>International</strong></p>
          <% if @calculator && @calculator.preferences[:first_item_rest_of_world] && @calculator.preferences[:first_item_rest_of_world].positive? %>

              <%= number_to_currency @calculator.preferences[:first_item_rest_of_world] %> for first item purchased.<br/>
              + <%= number_to_currency @calculator.preferences[:additional_item_rest_of_world] %> for each additional item purchased
          <% else %>
            <p>Please contact us for international shipping rates</p>
                <%= render "retailer/products/shared/shipping_warning" %>
          <% end %>
            <hr>
        <% end %>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>