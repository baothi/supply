<% content_for :title, "Deactivated Products" %>
<% content_for :main_menu, Hingeto::Section::HOME %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "retailer/shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <div class="page-main">

    <div class="page-content">
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Deactivated Products</h3>
        </div>
        <div class="panel-body">
          <%= render "retailer/products/shared/favorite_list" %>
          <div class="row">
            <div class="col-lg-12">
              <nav>
                <%= paginate @products , theme: 'twitter-bootstrap-4' %>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>
