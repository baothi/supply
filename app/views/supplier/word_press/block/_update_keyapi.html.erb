<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">Update Account Information</h3>
  </div>
  <div class="panel-body">

    <%= form_for([:supplier,@woo], :url => { :action => "update_keyapi" }) do |f| %>

        <%= render "shared/devise_errors", resource: @woo %>
        <%= f.hidden_field :teamable_id, value: @woo.teamable_id %>
        <%= f.hidden_field :teamable_type, value: @woo.teamable_type %>

        <div class="row">
          <div class="form-group col-sm-8">
            <br>
            <div class="field">
              <%= f.label :store_url, "Address Web Url" %><br />
              <%= f.text_field :store_url, required: true,class: "form-control" %>
            </div>
          </div>
          <div class="form-group col-sm-8">
            <br>
            <div class="field">
              <%= f.label :consumer_key, "Consumer key" %><br />
              <%= f.text_field :consumer_key, required: true,class: "form-control" %>
            </div>
          </div>
          <div class="form-group col-sm-8">
            <div class="field">
              <%= f.label :consumer_secret, "Consumer secret" %><br />
              <%= f.text_field :consumer_secret,required: true, class: "form-control"  %>
            </div>
          </div>
          <div class="form-group col-sm-8">
            <div class="field">
              <%= f.label :version, "Version" %><br />
              <%= f.text_field :version,required: true, class: "form-control"  %>
            </div>
          </div>

        </div>

        <div class="form-group">
          <div class="action_container">
            <%= f.submit "Update Account", class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>

  </div>
</div>
