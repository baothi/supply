<% content_for :title, "Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::MY_ACCOUNT %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "supplier/shared/side_menu" %>
<%#= render "shared/grid_menu" %>


<div class="page">
  <%#= render "retailer/settings/shared/menu" %>
  <div class="page-main">
    <%#= render "shared/temporary_password_warning" %>

    <div class="page-header">
      <h1 class="page-title">My Account</h1>
    </div>


    <div class="page-content">
      <div class="row">
      <%= render :partial=>"shared/alerts" %>
      </div>

      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Current Account Information</h3>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">Email Address</label>
              <%= email_field_tag nil, current_spree_user.email, class: "form-control", :readonly => true %>
            </div>
            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">Address Web Url</label>
              <%= email_field_tag nil, current_supplier.woo_credential.store_url, class: "form-control", :readonly => true %>
            </div>

            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">Consumer key </label>
              <%= text_field_tag nil, current_supplier.woo_credential.consumer_key, class: "form-control", readonly: true %>
            </div>
            <div class="form-group col-sm-6">
              <label class="control-label" for="inputBasicFirstName">Consumer secret </label>
              <%= text_field_tag nil, current_supplier.woo_credential.consumer_secret, class: "form-control", readonly: true %>
            </div>
          </div>
        </div>
      </div>
      <% if current_supplier.woo_credential.present? %>
      <%= render 'supplier/word_press/block/update_keyapi' %>
      <%end%>

    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>
</body>
