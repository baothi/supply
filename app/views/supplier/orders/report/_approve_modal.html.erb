
<!-- Modal -->
<div class="modal fade" id="approveModal" aria-labelledby="exampleFormModalLabel" role="dialog" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-simple">
    <%= form_tag supplier_order_report_decision_path, method: :post, class: "modal-content" do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="exampleFormModalLabel">How much do you want to credit retailer? Order total is <%= @order.grand_total %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xl-4 form-group">
            <label>Amount</label>
            <%= number_field_tag :amount, "", class: "form-control" %>
            <%= hidden_field_tag :order_id, @order.internal_identifier %>
          </div>

          <div class="col-md-12 float-right">
            <%= submit_tag 'Approve', class: "btn btn-primary btn-outline" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- End Modal -->
