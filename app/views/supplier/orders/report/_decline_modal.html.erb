
<!-- Modal -->
<div class="modal fade" id="declineModal" aria-labelledby="exampleFormModalLabel" role="dialog" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-simple">
    <%= form_tag supplier_order_report_decision_path, method: :post, class: "modal-content" do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="exampleFormModalLabel">Please tell the retailer why you are declining this issue report</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xl-12 form-group">
            <%= text_area_tag :reason, "", class: "form-control", rows: "5", placeholder: "Reason.." %>
            <%= hidden_field_tag :order_id, @order.internal_identifier %>
          </div>
          <div class="col-md-12 float-right">
            <%= submit_tag 'Decline', class: "btn btn-primary btn-outline" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- End Modal -->
