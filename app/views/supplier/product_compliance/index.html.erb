<% content_for :title, "Orders" %>
<% content_for :main_menu, Hingeto::Section::PRODUCT_COMPLIANCE %>
<% content_for :inner_menu, Hingeto::Section::PRODUCT_COMPLIANCE %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "supplier/shared/side_menu" %>
<%= render "shared/grid_menu" %>

<div class="page">
  <%#= render "supplier/orders/shared/menu" %>
  <div class="page-main">
    <div class="page-header">
      <h1 class="page-title">Product Compliance</h1>
    </div>
    <div class="page-content">
      <div class="panel nav-tabs-horizontal" data-plugin="tabs">
        <ul class="nav nav-tabs nav-tabs-line" role="tablist">
          <% @statuses.each_with_index do |status, i| %>

              <li class="nav-item <%= "dropdown" if i > 0 %>">
                <a class="nav-link <%= params[:filter_by].to_s == status.to_s ? 'active': '' %>"  href="?filter_by=<%= status.to_s %>" aria-controls="<%= status.to_s %>" role="tab" aria-expanded="false"><i class="icon wb-file" aria-hidden="true"></i><%= status.to_s.titleize %></a>
              </li>
          <% end %>
        </ul>
        <div class="panel-body">
          <%= render partial: "supplier/product_compliance/shared/products", locals: { products: @products } %>
          <div class="row">
            <div class="col-lg-12">
              <nav class="pull-right">
                <%= paginate @products , theme: 'twitter-bootstrap-4' %>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='order-payments-modals'>

  <%= render "shared/platform/footer" %>
</div>



</body>

