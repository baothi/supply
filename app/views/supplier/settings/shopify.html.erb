<% content_for :title, "Settings" %>
<% content_for :main_menu, Hingeto::Section::SETTINGS %>
<% content_for :inner_menu, Hingeto::Section::SHOPIFY %>
<body class="animsition page-aside-static page-aside-left">
<%= render "shared/outdated_browser" %>
<%= render "shared/nav_bar" %>
<%= render "supplier/shared/side_menu" %>
<%= render "shared/grid_menu" %>


<div class="page">
  <%= render "supplier/settings/shared/menu" %>
  <div class="page-main">


    <div class="page-header">
      <h1 class="page-title">Settings</h1>
    </div>


    <div class="page-content">


      <%= render :partial=>"shared/spaced_alerts" %>

      <div class="panel">

        <div class="panel-heading">
          <h3 class="panel-title">Shopify Instance Type</h3>
          <a id="location" name="location"></a>
        </div>
        <div class="panel-body">

          <div class="row">
            <div class="col-sm-3">

       <!--          <h4 class="example-title">Select Instance Type</h4> -->
              <%= form_for current_supplier, url: supplier_settings_update_path, method: :post do |f| %>
                <div class="form-group">
                  <%= f.select :instance_type, options_for_select(Spree::Supplier::INSTANCE_TYPES, current_supplier.instance_type), {prompt: '--- select instance type ---'}, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.submit 'Save', class: 'btn btn-primary form-button' %>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
<%= render "shared/platform/footer" %>


</body>
